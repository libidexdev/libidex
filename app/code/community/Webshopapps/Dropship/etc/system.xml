<config>
    <sections>
        <sales_email translate="label" module="sales">
            <groups>
                <dropship_order translate="label">
                    <label>Dropship Warehouse Order</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>998</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
                <div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
                This module was developed by <a href="http://www.webshopapps.com" target="_blank">WebShopApps.com</a> - <b>Magento Shipping Extension Specialists</b>.
                <br/> For docs & examples refer to the WebShopApps <a href="http://support.webshopapps.com/dropship/">Knowledge Base</a>.
                </div>
                  ]]>
                    </comment>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <identity translate="label">
                            <label>New Order Confirmation Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </identity>
                        <template translate="label">
                            <label>New Order Confirmation Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                        <copy_to translate="label comment">
                            <label>Send Order Email Copy To</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>separate by ","</comment>
                        </copy_to>
                        <copy_method translate="label">
                            <label>Send Order Email Copy Method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_method</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </copy_method>
                        <send_pdf translate="label">
                            <label>Include Shipment PDF</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_pdf>
                    </fields>
                </dropship_order>
                <!--DROP74 Comments Section Removed-->
            </groups>
        </sales_email>
        <carriers translate="label" module="shipping">
            <label>Shipping Methods</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>320</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <dropship translate="label">
                    <label>WebShopApps Dropship</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
				<div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
				This module was developed by <a href="http://www.webshopapps.com" target="_blank">WebShopApps.com</a> - <b>Magento Shipping Extension Specialists</b>.
				<br/> For docs & examples refer to the WebShopApps <a href="http://wiki.webshopapps.com/extensions/dropship-onepage">wiki</a>.
				</div>
			  	]]>
                    </comment>
                    <fields>
                        <shipment_email translate="label">
                            <label>Create Shipment Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>dropship/shipping_carrier_source_notifications</source_model>
                            <sort_order>61</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipment_email>
                        <shipping_heading translate="label">
                            <label>Split Checkout Settings</label>
                            <frontend_model>wsacommon/adminhtml_system_config_form_field_heading</frontend_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </shipping_heading>
                        <merged_checkout translate="label tooltip">
                            <label>Display Merged Shipping Rates</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>310</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <tooltip>If set to Yes will total shipping rates from each warehouse together into 1 rate</tooltip>
                        </merged_checkout>
                        <verbose_split translate="label tooltip">
                            <label>Always Show Warehouse and Item Breakdown</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>
                                Always show warehouse name and products within split checkout
                            </comment>
                            <tooltip>Only applies in Split Checkout, not when using Merged Rates
                            </tooltip>
                            <sort_order>320</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verbose_split>
                        <ignore_shipping translate="label tooltip">
                            <label>Ignore Dropship in Shipping Calculations</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>365</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <tooltip>If set to Yes will not use Dropship when calculating shipping rates but default to standard shipping</tooltip>
                            <comment>DO NOT CHANGE unless you want to disable Dropship Shipping</comment>
                        </ignore_shipping>
                        <show_all_items translate="label">
                            <label>Show Bundled Breakdown at Checkout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>335</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Display both bundle parent and bundle child products at checkout</comment>
                        </show_all_items>
                    </fields>
                </dropship>
            </groups>
        </carriers>
    </sections>
</config>
