<config>
    <tabs>
        <magegiant translate="label">
            <label>Magegiant Extensions</label>
            <sort_order>100</sort_order>
        </magegiant>
    </tabs>
    <sections>
        <giftcard translate="label" module="giftcard">
            <class>separator-top</class>
            <tab>magegiant</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <giftcardtemplate translate="label">
                    <label>Gift Card Template Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </is_enabled>
                        <load_jquery translate="label">
                            <label>Load jQuery library</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>5</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </load_jquery>
                        <max_file_size translate="label">
                            <label>Maximum upload file size</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[Note:<br/>
                                bytes. Apply for customers loading photos]]>
                            </comment>
                        </max_file_size>
                        <upload_label translate="label">
                            <label>Suggestion for upload file</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This will show in upload section</comment>
                        </upload_label>
                        <import_sample>
                            <frontend_type>button</frontend_type>
                            <frontend_model>giftcardtemplate/adminhtml_button_import_sample</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </import_sample>
                    </fields>
                </giftcardtemplate>
            </groups>
        </giftcard>
    </sections>
</config>