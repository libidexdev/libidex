<config>
    <modules>
        <Magegiant_GiftCardCredit>
            <version>0.1.0</version>
        </Magegiant_GiftCardCredit>
    </modules>
    <frontend>
        <routers>
            <giftcardcredit>
                <use>standard</use>
                <args>
                    <module>Magegiant_GiftCardCredit</module>
                    <frontName>giftcardcredit</frontName>
                </args>
            </giftcardcredit>
        </routers>
        <layout>
            <updates>
                <giftcardcredit>
                    <file>magegiant/giftcardcredit.xml</file>
                </giftcardcredit>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magegiant_GiftCardCredit>
                    <files>
                        <default>Magegiant_GiftCardCredit.csv</default>
                    </files>
                </Magegiant_GiftCardCredit>
            </modules>
        </translate>
        <events>
            <giftcard_account_add_actions>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/frontend_observer</class>
                        <method>addLinkRedeemToList</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_account_add_actions>
            <core_block_abstract_to_html_after>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/frontend_observer</class>
                        <method>addGiftCardCreditForm</method>
                    </giftcardcredit_observers>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <giantgiftcardcredit after="Mage_Adminhtml">Magegiant_GiftCardCredit_Adminhtml</giantgiftcardcredit>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <giftcardcredit>
                    <file>magegiant/giftcardcredit.xml</file>
                </giftcardcredit>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magegiant_GiftCardCredit>
                    <files>
                        <default>Magegiant_GiftCardCredit.csv</default>
                    </files>
                </Magegiant_GiftCardCredit>
            </modules>
        </translate>
        <events>
            <giftcard_adminhtml_sales_order_load_block>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/adminhtml_observer</class>
                        <method>orderLoadBlock</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_adminhtml_sales_order_load_block>
            <giftcard_source_order_refund>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/adminhtml_observer</class>
                        <method>addRefundAction</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_source_order_refund>
        </events>
    </adminhtml>
    <global>
        <models>
            <giftcardcredit>
                <class>Magegiant_GiftCardCredit_Model</class>
                <resourceModel>giftcardcredit_mysql4</resourceModel>
            </giftcardcredit>
            <giftcardcredit_mysql4>
                <class>Magegiant_GiftCardCredit_Model_Mysql4</class>
                <entities>
                    <account>
                        <table>magegiant_giftcard_credit</table>
                    </account>
                </entities>
            </giftcardcredit_mysql4>
        </models>
        <resources>
            <giant_giftcard_credit_setup>
                <setup>
                    <module>Magegiant_GiftCardCredit</module>
                    <class>Magegiant_GiftCardCredit_Model_Mysql4_Setup</class>
                </setup>
            </giant_giftcard_credit_setup>
        </resources>
        <blocks>
            <giftcardcredit>
                <class>Magegiant_GiftCardCredit_Block</class>
            </giftcardcredit>
        </blocks>
        <helpers>
            <giftcardcredit>
                <class>Magegiant_GiftCardCredit_Helper</class>
            </giftcardcredit>
        </helpers>
        <events>
            <paypal_prepare_line_items>
                <observers>
                    <giftcardcredit_observers>
                        <type>singleton</type>
                        <class>giftcardcredit/observer</class>
                        <method>paypalPrepareLineItems</method>
                    </giftcardcredit_observers>
                </observers>
            </paypal_prepare_line_items>
            <magegiant_giftcard_get_status_array>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/observer</class>
                        <method>setStatusRedeemToGiftCard</method>
                    </giftcardcredit_observers>
                </observers>
            </magegiant_giftcard_get_status_array>
            <giftcard_generate_product_prepare_data>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/observer</class>
                        <method>addDataToGenerateGiftcard</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_generate_product_prepare_data>
            <giftcard_history_get_action_array>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/observer</class>
                        <method>addActionHistoryToGiftCard</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_history_get_action_array>
            <giftcard_collect_invoice_after>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/total_invoice_credit</class>
                        <method>collect</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_collect_invoice_after>
            <giftcard_collect_creditmemo_after>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/total_creditmemo_credit</class>
                        <method>collect</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_collect_creditmemo_after>
            <giftcard_order_total_view>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/observer</class>
                        <method>initTotals</method>
                    </giftcardcredit_observers>
                </observers>
            </giftcard_order_total_view>
            <sales_model_service_quote_submit_success>
                <observers>
                    <giftcardcredit_observers>
                        <class>giftcardcredit/observer</class>
                        <method>salesQuoteSubmitSuccess</method>
                    </giftcardcredit_observers>
                </observers>
            </sales_model_service_quote_submit_success>
            <order_cancel_after>
                <observers>
                    <giftcardcredit_observers>
                        <type>singleton</type>
                        <class>giftcardcredit/observer</class>
                        <method>salesOrderCancelAfter</method>
                    </giftcardcredit_observers>
                </observers>
            </order_cancel_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <giftcardcredit_observers>
                        <type>singleton</type>
                        <class>giftcardcredit/observer</class>
                        <method>salesOrderCreditmemoSaveAfter</method>
                    </giftcardcredit_observers>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <giftcard_credit_exclude_tax>
                        <class>giftcardcredit/total_quote_creditexcltax</class>
                        <after>discount,giftcard_exclude_tax</after>
                        <before>tax</before>
                    </giftcard_credit_exclude_tax>
                    <giftcard_credit_include_tax>
                        <class>giftcardcredit/total_quote_creditincltax</class>
                        <after>tax,giftcard_include_tax</after>
                        <before>grand_total</before>
                    </giftcard_credit_include_tax>
                </totals>
                <item>
                    <product_attributes>
                        <allow_redeem/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <base_giftcard_credit_amount>
                    <to_order>*</to_order>
                </base_giftcard_credit_amount>
                <giftcard_credit_amount>
                    <to_order>*</to_order>
                </giftcard_credit_amount>
            </sales_convert_quote_address>
            <sales_convert_quote_item>
                <base_giftcard_credit_amount>
                    <to_order_item>*</to_order_item>
                </base_giftcard_credit_amount>
                <giftcard_credit_amount>
                    <to_order_item>*</to_order_item>
                </giftcard_credit_amount>
            </sales_convert_quote_item>
            <sales_copy_order>
                <base_giftcard_credit_amount>
                    <to_edit>*</to_edit>
                </base_giftcard_credit_amount>
                <giftcard_credit_amount>
                    <to_edit>*</to_edit>
                </giftcard_credit_amount>
            </sales_copy_order>
        </fieldsets>
        <pdf>
            <totals>
                <giftcard_credit>
                    <title>Credit Discount</title>
                    <source_field>giftcard_credit_amount</source_field>
                    <model>giftcard/total_pdf_giftcard</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>256</sort_order>
                </giftcard_credit>
            </totals>
        </pdf>
    </global>

    <default>
        <giftcard>
            <redeem>
                <credit>
                    <allow_redeem>1</allow_redeem>
                    <allow_redeem_condition>1</allow_redeem_condition>
                    <shipping>1</shipping>
                    <allow_buy_giftcard>1</allow_buy_giftcard>
                </credit>
            </redeem>
            <map>
                <allow_redeem>redeem/credit</allow_redeem>
            </map>
        </giftcard>
    </default>
</config>