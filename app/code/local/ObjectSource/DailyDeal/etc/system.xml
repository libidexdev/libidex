<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <objectsource translate="label" module="dailydeal">
            <label>ObjectSource Extensions</label>
            <sort_order>100</sort_order>
        </objectsource>
    </tabs>
    <sections>
        <dailydeal translate="label" module="dailydeal">
            <label>Daily Deal Options</label>
            <tab>objectsource</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <dailydeal_group translate="label" module="dailydeal">
                    <label>Daily Deal Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <enabled translate="label">
                            <label>Generate Promotions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <prom_suffix translate="label">
                            <label>Promotion suffix: </label>
                            <comment>Unique label at beginning on label name so we can identify it as a daily deal</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>19</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </prom_suffix>
                        <per_day translate="label">
                            <label>Promotions per day: </label>
                            <comment>Number of promotions to run per day</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </per_day>
                        <prom_length translate="label">
                            <label>Promotion length: </label>
                            <comment>Duration of the generated promotions in days</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </prom_length>
                        <prom_percentage translate="label">
                            <label>Percentage discount: </label>
                            <comment>Percentage off the marked price of the promotion item</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </prom_percentage>
                        <preprocess_lenth translate="label">
                            <label>Preprocess length: </label>
                            <comment>Generate future promotions for number of days</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </preprocess_lenth>
                    </fields>
                </dailydeal_group>
            </groups>
        </dailydeal>
    </sections>
</config>