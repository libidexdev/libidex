<?php /* @var $this Mage_Catalog_Block_Product_View_Options_Type_Select */ ?>
<?php $_option = $this->getOption() ?>

<dt class="option-label">
    <label<?php if ($_option->getIsRequire()) echo ' class="required"' ?>>
        <span class="realOptionTitle"><?php echo  $this->escapeHtml($_option->getTitle()) ?></span>
    </label>
</dt>
<dd<?php if ($_option->decoratedIsLast){?> class="last"<?php }?>>
    <div class="input-box">
        <?php echo $this->getValuesHtml() ?>
        <?php if ($_option->getIsRequire()): ?>
        <?php if ($_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_RADIO || $_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_CHECKBOX): ?>
            <span id="options-<?php echo $_option->getId() ?>-container"></span>
            <?php endif; ?>
        <?php endif;?>
    </div>
    <?php switch (Mage::registry('productpagestep_class')):
        case 'swatch_color_main': ?>
            <div class="swatchPreview">
                <img src="<?php echo Mage::helper('productpagestep')->getSelectASwatchImageUrl()?>" />
            </div>
    <?php break;?>
    <?php case 'swatch_garment': ?>
            <div class="swatchPreview">
		<?php if (strpos($_option->getTitle(), 'Options') === 0): ?>
                    <img src="<?php echo Mage::helper('productpagestep')->getSelectAOptionImageUrl()?>" />
		<?php else: ?>
                    <img src="<?php echo Mage::helper('productpagestep')->getSelectAStyleImageUrl()?>" />
                <?php endif; ?> 
            </div>
    <?php break; ?>
        <?php case 'swatch_no_preview': ?>
            <?php break; ?>
    <?php endswitch; ?>
</dd>
