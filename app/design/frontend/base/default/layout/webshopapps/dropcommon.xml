<?xml version="1.0"?>
<layout version="0.1.0">

  <sales_order_view>
  	<reference name="my.account.wrapper">
  		<block type="sales/order_info" name="sales.order.info" as="info" template="webshopapps/dropcommon/sales/order/info.phtml"/>
      </reference>
      <reference name="sales.order.view">
      	<block type="sales/order_items" name="order_items" template="webshopapps/dropcommon/sales/order/items.phtml">
      		<action method="addItemRender"><type>default</type><block>sales/order_item_renderer_default</block><template>webshopapps/dropcommon/sales/order/items/renderer/default.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>webshopapps/dropcommon/sales/order/items/renderer/default.phtml</template></action>
            <block type="sales/order_totals" name="order_totals" template="sales/order/totals.phtml">
                <action method="setLabelProperties"><value>colspan="5" class="a-right"</value></action>
                <action method="setValueProperties"><value>class="last a-right"</value></action>
                <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml" />
            </block>
        </block>
      </reference>
      
  </sales_order_view>
    
</layout> 