<?php $giftCard = $this->getGiftcardInformation(); ?>
<?php if($giftCard && $giftCard->getId()): ?>
<div class="fieldset giftcard-view-detail">
	<h2 class="legend"><?php echo $this->__('Gift Card Information') ?></h2>
	<ul class="form-list">
		<li class="fields">
			<div class="title"><?php echo $this->__('Gift Card Code') ?></div>
			<div class="content"><strong><?php echo $giftCard->getCode() ?></strong></div>
		</li>
		<li class="fields">
			<div class="title"><?php echo $this->__('Status') ?></div>
			<div class="content"><strong><?php echo $this->getStatusLabel($giftCard) ?></strong></div>
		</li>
		<li class="fields">
			<div class="title"><?php echo $this->__('Amount') ?></div>
			<div class="price-box">
				<span class="regular-price"><?php echo Mage::helper('core')->formatPrice($giftCard->getAmount()) ?></span>
			</div>
		</li>
		<?php if($giftCard->getExpiredAt()): ?>
		<li class="fields">
			<div class="title"><?php echo $this->__('Expired At') ?></div>
			<div class="content"><?php echo $this->formatDate($giftCard->getExpiredAt(), 'medium') ?></div>
		</li>
		<?php endif; ?>
	</ul>
</div>
